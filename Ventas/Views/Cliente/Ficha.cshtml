@model Ventas.Models.CLIENTE
@{
    ViewBag.Title = "Ficha";
}

<h2>Ficha</h2>
<fieldset>
    <legend>Ingreso de productos</legend>
    @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            <span class="col-md-2">
                Rut
            </span>
            <span class="col-md-6">
                @Html.TextBox("rut", null, new { @class = "form-control", placeholder = "Ingresar rut" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Ingresar nombre" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Apellido
            </span>
            <span class="col-md-6">
                @Html.TextBox("apellido", null, new { @class = "form-control", placeholder = "Ingresar Apellido" })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Direccion
            </span>
            <span class="col-md-6">
                @Html.TextBox("direccion", null, new { @class = "form-control", placeholder = "Ingresar direccion " })
            </span>
        </div>
        <div class="form-group">
            <span class="col-md-2">
                Tipo de cliente
            </span>
            <span class="col-md-6">
                @Html.TextBox("tipo", null, new { @class = "form-control", placeholder = "Ingresar tipo " })
            </span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>

    }
</fieldset>